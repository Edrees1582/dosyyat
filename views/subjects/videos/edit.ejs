<%- layout('layouts/boilerplate') %>
<form
  action="/subjects/<%=subject.id%>/videos/<%=video._id%>/?_method=PUT"
  method="POST"
>
  <label for="name">Name: </label>
  <input
    type="text"
    name="video[name]"
    id="name"
    value="<%=video.name%>"
    required
  />
  <br /><br />
  <label for="link">Link: </label>
  <input
    type="text"
    name="video[link]"
    id="link"
    value="<%=video.link%>"
    required
  />
  <br /><br />
  <button>Edit</button>
</form>
<a href="/subjects/<%=subject.id%>">back</a>
