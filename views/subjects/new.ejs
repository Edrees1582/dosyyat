<%- layout('layouts/boilerplate') %>
<div class="col-md-8 offset-md-2">
  <h1>New subject</h1>
  <form action="/subjects" method="POST">
    <div class="mb-3">
      <label for="title">Title: </label>
      <input
        type="text"
        name="subject[title]"
        id="title"
        class="form-control"
        required />
    </div>
    <div class="mb-3">
      <label for="id">ID: </label>
      <input
        type="text"
        name="subject[id]"
        id="id"
        class="form-control"
        required />
    </div>
    <div class="mb-3">
      <label for="description">Description: </label>
      <textarea
        name="subject[description]"
        id="description"
        rows="5"
        class="form-control"
        required></textarea>
    </div>
    <div class="mb-3">
      <label for="syllabus">Syllabus: </label>
      <input
        type="text"
        name="subject[syllabus]"
        id="syllabus"
        class="form-control"
        required />
    </div>
    <div class="mb-3">
      <label for="book">Book: </label>
      <input type="text" name="subject[book]" id="book" class="form-control" />
    </div>
    <button class="btn btn-success w-100">Add</button>
  </form>
  <a href="/subjects" class="btn btn-secondary w-100 mt-3">Back</a>
</div>
