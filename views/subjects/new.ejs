<%- layout('layouts/boilerplate') %>
<form action="/subjects" method="POST">
  <label for="title">Title: </label>
  <input type="text" name="subject[title]" id="title" required />
  <br /><br />
  <label for="id">ID: </label>
  <input type="text" name="subject[id]" id="id" required />
  <br /><br />
  <label for="description">Description: </label>
  <textarea
    name="subject[description]"
    id="description"
    cols="30"
    rows="10"
    required
  ></textarea>
  <br /><br />
  <label for="syllabus">Syllabus: </label>
  <input type="text" name="subject[syllabus]" id="syllabus" required />
  <br /><br />
  <label for="book">Book: </label>
  <input type="text" name="subject[book]" id="book" />
  <br /><br />
  <button>Add</button>
</form>
<a href="/subjects">back</a>
