<%- layout('layouts/boilerplate') %>
<form action="/subjects/edit/<%=subject.id%>?_method=PUT" method="POST">
  <label for="title">Title: </label>
  <input type="text" name="subject[title]" id="title" value="<%=subject.title%>" required />
  <br /><br />
  <label for="id">ID: </label>
  <input type="text" name="subject[id]" id="id" value="<%=subject.id%>" required />
  <br /><br />
  <label for="description">Description: </label>
  <textarea
    name="subject[description]"
    id="description"
    cols="30"
    rows="10"
    required
  ><%=subject.description%></textarea>
  <br /><br />
  <label for="syllabus">Syllabus: </label>
  <input type="text" name="subject[syllabus]" id="syllabus" value="<%=subject.syllabus%>" required />
  <br /><br />
  <label for="book">Book: </label>
  <input type="text" name="subject[book]" id="book" value="<%=subject.book%>" />
  <br /><br />
  <button>Edit</button>
</form>
<a href="/subjects/<%=subject.id%>">back</a>
