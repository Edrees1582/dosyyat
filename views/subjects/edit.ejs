<%- layout('layouts/boilerplate') %>
<div class="col-md-8 offset-md-2">
  <h1>Edit subject</h1>
  <form action="/subjects/<%=subject.id%>/edit?_method=PUT" method="POST">
    <div class="mb-3">
      <label for="title">Title: </label>
      <input
        type="text"
        name="subject[title]"
        id="title"
        value="<%=subject.title%>"
        class="form-control"
        required />
    </div>
    <div class="mb-3">
      <label for="id">ID: </label>
      <input
        type="text"
        name="subject[id]"
        id="id"
        value="<%=subject.id%>"
        class="form-control"
        required />
    </div>
    <div class="mb-3">
    <label for="description">Description: </label>
      <textarea
        name="subject[description]"
        id="description"
        cols="30"
        rows="10"
        class="form-control"
        required ><%=subject.description%></textarea>
    </div>
    <div class="mb-3">
      <label for="syllabus">Syllabus: </label>
      <input
        type="text"
        name="subject[syllabus]"
        id="syllabus"
        value="<%=subject.syllabus%>"
        class="form-control"
        required />
    </div>
    <div class="mb-3">
      <label for="book">Book: </label>
      <input
        type="text"
        name="subject[book]"
        id="book"
        value="<%=subject.book%>"
        class="form-control" />
    </div>
    <button class="btn btn-success w-100">Edit</button>
  </form>
  <a href="/subjects/<%=subject.id%>" class="btn btn-secondary w-100 mt-3">Back</a>
</div>
