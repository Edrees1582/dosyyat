<%- layout('layouts/forms') %>
<h1>Edit testbank</h1>
<form action="/subjects/<%=subject.id%>/testbanks/<%=testbank._id%>/?_method=PUT" method="POST">
  <div class="mb-3">
    <label for="name">Name: </label>
    <input
      type="text"
      name="testbank[name]"
      id="name"
      value="<%=testbank.name%>"
      class="form-control"
      required />
  </div>
  <div class="mb-3">
    <label for="link">Link: </label>
    <input
      type="text"
      name="testbank[link]"
      id="link"
      value="<%=testbank.link%>"
      class="form-control"
      required />
  </div>
  <button class="btn btn-success w-100">Edit</button>
</form>
